@model IEnumerable<FishingJournal.Models.FishListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Fish Species</h2>

<p>
    @Html.ActionLink("Add Species", "Create")
</p>
<table class="table" style="text-align:center; font-size:large">
    <tr>
        <th style="text-align:center; border:none">
            @Html.DisplayNameFor(model => model.FishId)
        </th>
        <th style="text-align: center; border: none">
            @Html.DisplayNameFor(model => model.Species)
        </th>
        <th style="text-align: center; border: none">
            @Html.DisplayNameFor(model => model.AverageSize)
        </th>
        <th style="text-align: center; border: none">
            @Html.DisplayNameFor(model => model.AverageWeight)
        </th>        
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="border: none">
            @Html.DisplayFor(modelItem => item.FishId)
        </td>
        <td style="border: none">
            @Html.DisplayFor(modelItem => item.Species)
        </td>
        <td style="border: none">
            @Html.DisplayFor(modelItem => item.AverageSize)
        </td>
        <td style="border: none">
            @Html.DisplayFor(modelItem => item.AverageWeight)
        </td>
        <td style="border: none">
            @Html.ActionLink("Edit", "Edit", new { id=item.FishId }) |
            @Html.ActionLink("Details", "Details", new { id = item.FishId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.FishId })
        </td>
    </tr>
}

</table>
